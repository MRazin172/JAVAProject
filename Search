    private void SearchbtnActionPerformed(java.awt.event.ActionEvent evt) {                                          

        String srch = txtSearch.getText();

        searching("select * from emp where id IN (" + srch + ")");
        JOptionPane.showMessageDialog(this, "Search Complete");
    }                                         

