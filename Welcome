private void openDashboard() {
        HR dashboard = new HR();
        dashboard.setVisible(true);

        this.dispose();
    }
private void delete() {
        delete dashboard = new delete();
        dashboard.setVisible(true);

        this.dispose();
    }
private void edit() {
        // Add code to open the dashboard
        update dashboard = new update();
        dashboard.setVisible(true);

        // Close the current login window (optional)
        this.dispose();
    }
private void logout() {
        // Add code to open the dashboard
        LoginForm dashboard = new LoginForm();
        dashboard.setVisible(true);

        // Close the current login window (optional)
        this.dispose();
    }
private void searching() {
        // Add code to open the dashboard
        search dashboard = new search();
        dashboard.setVisible(true);

        // Close the current login window (optional)
        this.dispose();
    }

